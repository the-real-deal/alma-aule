RewriteEngine On
RewriteBase /

# Se l'URL contiene /components/, reindirizza a quello senza
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+pages/([^\s]+) [NC]
RewriteRule ^ /%1 [R=301,L]

# Riscrivi internamente solo se il file/cartella non esiste nella root
# e la richiesta non è già per /components/
RewriteCond %{REQUEST_URI} !^/pages/ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/pages%{REQUEST_URI} -f [OR]
RewriteCond %{DOCUMENT_ROOT}/pages%{REQUEST_URI} -d
RewriteRule ^(.*)$ /pages/$1 [L]

ErrorDocument 404 /pages/404/